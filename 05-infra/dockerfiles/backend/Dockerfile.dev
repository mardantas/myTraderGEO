# ==================================
# Backend Development Dockerfile
# ==================================
# Hot reload with dotnet watch

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS development

WORKDIR /app

# Copy csproj and restore dependencies
COPY *.csproj ./
RUN dotnet restore

# Copy source code
COPY . ./

# Expose port
EXPOSE 8080

# Run with hot reload
CMD ["dotnet", "watch", "run", "--urls", "http://0.0.0.0:8080"]
